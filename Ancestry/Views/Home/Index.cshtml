@model Ancestry.Models.Review

<link href="Site.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css">

<h2>Survey</h2>

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { role = "form", enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Please review our site</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Age, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Gender", new List<SelectListItem>
                {
                   new SelectListItem{ Text="Male", Value="Male"},
                   new SelectListItem{ Text="Female", Value="Female"}
                }, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2" style="font-weight:bold">Ability To Find Products</p>
            <div class="col-md-10">
                @Html.DropDownList("AbilityToFind", new List<SelectListItem>
                {
                   new SelectListItem{ Text="1", Value="1"},
                   new SelectListItem{ Text="2", Value="2"},
                   new SelectListItem{ Text="3", Value="3"},
                   new SelectListItem{ Text="4", Value="4"},
                   new SelectListItem{ Text="5", Value="5"}
                }, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AbilityToFind, "", new { @class = "text-danger" })
            </div>
            <div id="slider"></div>
            <asp:label id="lbl"></asp:label>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2" style="font-weight:bold">Range Of Products</p>
            <div class="col-md-10">
                @Html.DropDownList("RangeOfProducts", new List<SelectListItem>
                {
                   new SelectListItem{ Text="1", Value="1"},
                   new SelectListItem{ Text="2", Value="2"},
                   new SelectListItem{ Text="3", Value="3"},
                   new SelectListItem{ Text="4", Value="4"},
                   new SelectListItem{ Text="5", Value="5"}
                }, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AbilityToFind, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2" style="font-weight:bold">Easy to checkout</p>
            <div class="col-md-10">
                @Html.DropDownList("EasyCheckout", new List<SelectListItem>
                {
                   new SelectListItem{ Text="1", Value="1"},
                   new SelectListItem{ Text="2", Value="2"},
                   new SelectListItem{ Text="3", Value="3"},
                   new SelectListItem{ Text="4", Value="4"},
                   new SelectListItem{ Text="5", Value="5"}
                }, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AbilityToFind, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2" style="font-weight:bold">Overall Experience</p>
            <div class="col-md-10">
                @Html.DropDownList("OverallExperience", new List<SelectListItem>
                {
                   new SelectListItem{ Text="1", Value="1"},
                   new SelectListItem{ Text="2", Value="2"},
                   new SelectListItem{ Text="3", Value="3"},
                   new SelectListItem{ Text="4", Value="4"},
                   new SelectListItem{ Text="5", Value="5"}
                }, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AbilityToFind, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MostLiked, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MostLiked, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MostLiked, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MostDisliked, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MostDisliked, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MostDisliked, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MostLikeToSee, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MostLikeToSee, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MostLikeToSee, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="submitBtn" type="submit" value="Create" class="btn btn-block btn-primary" />
            </div>
        </div>
    </div>
}

<div class="thanks">
    Thank You For Submitting A Survey
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>

<script>
    $('form').submit(function (ev) {
        ev.preventDefault();
        $.ajax({
            url: this.action,
            type: this.method,
            data: $(this).serialize(),
            success: function (result) {
                $('form').fadeOut(1000, function () {
                    $('.thanks').fadeIn(1000);
                });
            }
        });
    });
</script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}